<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.SplashScreen">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/a_s_c_150"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/a_s_c_250"
        android:layout_marginBottom="@dimen/a_s_c_282"
        android:gravity="center_horizontal"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/a_s_c_111"
        android:gravity="center_horizontal"
        android:text="@string/elementler_final_projem"
        android:textColor="@color/a_s_c_c"
        android:textSize="@dimen/a_s_c_12" />

</RelativeLayout>